<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aiPanelRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/ic_back_chevron" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Writing Assistance"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/langContainer"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/key_background_borderless"
            android:gravity="center_vertical"
            android:minWidth="100dp"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/kb_text_primary"
                android:contentDescription="Language"
                android:src="@drawable/sym_keyboard_globe" />

            <TextView
                android:id="@+id/langChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="English"
                android:textSize="11sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="6dp"
                android:contentDescription="Expand"
                android:src="@drawable/ic_back_chevron"
                android:rotation="90"
                android:tint="@color/kb_text_primary" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/chipRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/replyToneRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/heroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Something"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heroSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="and Click âœ¨ to ask ChatGPT"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReplace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="@string/ai_panel_button_back"
        android:textAllCaps="false"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/guideLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="How to Use CleverType Guide"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="4dp"
        android:textSize="11sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/resultList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shimmer_rect" />

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shimmer_rect" />

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/shimmer_rect" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnKeyboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_button_background"
        android:contentDescription="@string/keyboard_button_back"
        android:padding="6dp"
        android:src="@drawable/keyboard_icon"
        android:visibility="gone" />

</LinearLayout>
