<?xml version="1.0" encoding="utf-8"?>
<!-- Simplified 6-button toolbar for AI Keyboard -->
<!-- âœ… UNIFIED THEMING: Transparent background for perfect theme matching -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_toolbar_simple"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Left Side Icons (Grouped: ChatGPT, Grammar, Tone) -->
    <ImageView
        android:id="@+id/btn_ai_assistant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="AI Assistant" />

    <Space
        android:layout_width="2dp"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/btn_grammar_fix"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Grammar Fix" />

    <Space
        android:layout_width="2dp"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/btn_word_tone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Word Tone" />

    <!-- Middle Spacer (Flexible Gap) -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Right Side Icons (Grouped: Clipboard, Emoji, Voice) -->
    <ImageView
        android:id="@+id/btn_clipboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Clipboard" />

    <Space
        android:layout_width="2dp"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/btn_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Emoji Panel" />

    <Space
        android:layout_width="2dp"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/btn_voice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voice Input" />
</LinearLayout>
